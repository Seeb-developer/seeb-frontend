# Enable mod_headers if not already enabled
<IfModule mod_headers.c>
  # Allow cross-origin access from any domain
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, OPTIONS"
  Header set Access-Control-Allow-Headers "Origin, Content-Type, Accept"
</IfModule>

# Optional: Prevent execution of PHP or script files for security
<FilesMatch "\.(php|php5|php7|phps|phtml|cgi|pl|py|asp|aspx|jsp)$">
  Order deny,allow
  Deny from all
</FilesMatch>

# Optional: Allow access to image and static file types
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|bmp|ico|pdf|js|css|woff|woff2|ttf|otf|eot)$">
  Order allow,deny
  Allow from all
</FilesMatch>

# Optional: Turn off directory listing
Options -Indexes
